# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/curatarie
MONGODB_TEST_URI=mongodb://localhost:27017/curatarie_test

# JWT
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Email Service (pentru notificări)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# SMS Service (opțional)
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.smsservice.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Frontend URL (pentru CORS)
FRONTEND_URL=http://localhost:3000

# QR Code Settings
QR_CODE_SIZE=200
QR_CODE_QUALITY=H